rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Gallery images - public read, authenticated write
    match /gallery-images/{galleryId}/{fileName} {
      allow read: if true; // Public read access for gallery images
      allow write: if true; // Allow write for now (you can add auth later)
    }
    
    // User avatars - public read, authenticated write
    match /user-avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if true; // Allow write for now (you can add auth later)
    }
    
    // Telegram photos - public read, authenticated write
    match /telegram-photos/{fileName} {
      allow read: if true;
      allow write: if true; // Allow write for now (you can add auth later)
    }
  }
}
